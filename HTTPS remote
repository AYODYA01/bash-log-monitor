# 1. create project folder
mkdir simple-network-scanner
cd simple-network-scanner

# 2. initialize git and create files
git init
echo "# Simple Network Scanner" > README.md
echo "node_modules\n*.log" > .gitignore

# 3. add a license (MIT example)
cat > LICENSE <<'EOF'
MIT License
Copyright (c) 2025 YOUR_NAME
Permission is hereby granted, ...
EOF

# 4. sample bash script
cat > scan.sh <<'EOF'
#!/usr/bin/env bash
# Simple network scanner - scans a subnet for live hosts with ping
if [ -z "$1" ]; then
  echo "Usage: $0 <subnet>   e.g. $0 192.168.1"
  exit 1
fi
subnet="$1"
for i in {1..254}; do
  ip="$subnet.$i"
  ping -c 1 -W 1 "$ip" &> /dev/null && echo "$ip is up" &
done
wait
EOF
chmod +x scan.sh

# 5. commit & push
git add .
git commit -m "Initial commit: README, LICENSE, sample scan.sh"
# create GitHub repo first, then add remote:
git remote add origin git@github.com:YOUR_USERNAME/simple-network-scanner.git
git branch -M main
git push -u origin main
